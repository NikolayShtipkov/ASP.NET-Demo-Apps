@model IEnumerable<ProductAppWeb.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<br />

<h1>Products</h1>

<br />

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-square"></i> &nbsp; Create New Product
    </a>
</p>
<table class="table table-bordered table-striped bg-dark" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width ="50%">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td width="30%">
                    @Html.DisplayFor(modelItem => item.Price)$
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> &nbsp; Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-card-list"></i> &nbsp; Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> &nbsp Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
